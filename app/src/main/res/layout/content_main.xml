<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#066225"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="net.cs2i.us_football.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/btn_goto_joueur"
        android:layout_width="254dp"
        android:layout_height="45dp"
        android:text="Joueur"
        app:layout_constraintBottom_toTopOf="@+id/btn_goto_equipe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13999999" />

    <Button
        android:id="@+id/btn_goto_equipe"
        android:layout_width="254dp"
        android:layout_height="45dp"
        android:text="Equipe"
        app:layout_constraintBottom_toTopOf="@+id/btn_goto_strategie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_goto_joueur" />

    <Button
        android:id="@+id/btn_goto_strategie"
        android:layout_width="254dp"
        android:layout_height="45dp"
        android:text="Stratégie"
        app:layout_constraintBottom_toTopOf="@+id/btn_goto_celebration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_goto_equipe" />

    <Button
        android:id="@+id/btn_goto_celebration"
        android:layout_width="254dp"
        android:layout_height="45dp"
        android:text="Célébration"
        app:layout_constraintBottom_toTopOf="@+id/btn_goto_tournoi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_goto_strategie" />

    <Button
        android:id="@+id/btn_goto_tournoi"
        android:layout_width="254dp"
        android:layout_height="45dp"
        android:text="Tournoi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_goto_celebration" />


</android.support.constraint.ConstraintLayout>